global-reset()

html
  min-height 100%
  height 100%

body
  min-height 100%
  height 100%
  background $bodyBg
  color $textColor
  font-family "Roboto", Arial, sans-serif
  font-size 16px

div, section
  box-sizing border-box

input, textarea
  box-sizing border-box
  border($inputBorder)
  font-size 16px
  padding-left 5px

textarea
  transition height 300ms ease-out 40ms
  resize none
  font-size 14px

input:focus, textarea:focus
  border(darken($inputBorder, 30))