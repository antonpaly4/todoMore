global-reset()

html
  height 100%

body
  height 100%
  background $bodyBg
  color $textColor
  font-family 'Arimo', sans-serif;
  font-size 14px
  line-height 1.4em

div, section, header, footer
  box-sizing border-box

input, textarea
  box-sizing border-box
  font-size 14px
  padding 5px
  height 30px

textarea
  transition height 300ms ease-out 40ms
  resize none
  font-size 14px
  overflow hidden

a
  text-decoration none
  color $linkColor