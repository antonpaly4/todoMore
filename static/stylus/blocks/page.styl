.page
  size 100%
  display table
  table-layout fixed

  &-content
    display table-cell
    float none
    height 100%

  &-app
    size 100%
    display table

  &-half
    width 50%
    display table-cell
    position relative
    vertical-align top

.vbox
  size 100%
  display table
  position relative

  &-content
    display table-row
    width 100%
    height inherit

  &-container
    padding-bottom 60px