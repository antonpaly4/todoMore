.checkbox
  size 14px
  border-radius 3px
  border $inputBorder
  position relative
  transition box-shadow 200ms ease-in 50ms

  &:hover
    box-shadow inset 0 0 2px 0 rgba(255, 160, 48, 0.8)

  &__check
    size 24px 24px
    absolute top -4px left -2px
    background url("../img/layout/checkmark.svg") no-repeat center
    display none

  &.checked &__check
    display block