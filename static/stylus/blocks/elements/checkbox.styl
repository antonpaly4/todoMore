.checkbox
  height 14px
  font-size 14px
  color #808080
  padding-left 20px
  position relative
  display inline-block

  &-check
    size 14px
    border-radius 3px
    border #cfcfcf
    absolute left top
    transition box-shadow 200ms ease-in 50ms
    background #ffffff

  &:hover &-check
    box-shadow inset 0 0 2px 0 rgba(255, 160, 48, 0.8)

    &__check
      size 24px 24px
      absolute top -4px left -2px
      background url("../img/layout/checkmark.svg") no-repeat center
      display none

  &.checked &-check__check
    display block